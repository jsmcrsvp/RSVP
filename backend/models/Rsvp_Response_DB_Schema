const mongoose = require("mongoose");

const rsvpResponseSchema = new mongoose.Schema({
  eventdate: { type: String, required: true },
  eventday: { type: String, required: true },
  eventname: { type: String, required: true },
  programname: { type: String, required: true },
  memname: { type: String, required: true },
  memaddress: { type: String, required: true },
  memphonenumber: { type: String },
  rsvpcount: { type: Number, required: true },
  rsvpconfnumber: { type: String, required: true, unique: true }
});

module.exports = mongoose.model("RsvpResponse", rsvpResponseSchema);